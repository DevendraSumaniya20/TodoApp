<!DOCTYPE html>
<html lang="en">
  <%- include('./parcials/head.ejs') %>
  <body>
    <%- include('./parcials/nav.ejs') %>

    <div class="container">
      <div class="row">
        <form class="col s12" action="/items" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">shopping_cart</i>
              <input
                id="item_name"
                name="name"
                type="text"
                class="validate"
                autofocus
              />
              <label for="icon_prefix"> Item Name</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">request_quote</i>
              <input
                id="item_name"
                name="price"
                type="text"
                class="validate"
                autofocus
              />
              <label for="icon_prefix">Price</label>
            </div>
          </div>
          <button class="btn">Add Item</button>
        </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function (event) {
        M.updateTextFields();
      });
    </script>
  </body>
</html>
