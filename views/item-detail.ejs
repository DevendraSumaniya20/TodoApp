<!DOCTYPE html>
<html lang="en">
  <%- include('./parcials/head.ejs') %>

  <body>
    <%- include('./parcials/nav.ejs') %>

    <div class="container">
      <h4>Item Detail</h4>
      <div>
        <h5>Item Name: <%= item.name %></h5>
        <h5>Item Price: $<%= item.price %></h5>
      </div>

      <a id="deleteBtn" class="delete btn" data-id="<%= item._id%>" href=""
        >Delete</a
      >

      <script>
        deleteBtn.onclick = function (e) {
          e.preventDefault();

          const id = deleteBtn.dataset.id;
          const endpoint = `/items/${id}`;

          fetch(endpoint, {
            method: "DELETE",
          })
            .then((res) => res.json())
            .then((data) => {
              console.log("data", data);
              window.location.href = data.redirect;
            })
            .catch((err) => {
              console.log(err);
            });
        };
      </script>
    </div>
  </body>
</html>
